<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(function () {
        queryAllsupplier();
    });
    function queryAllsupplier() {

        $.ajax({
            type: "post",
            url: "/BCY/queryAllsupplier",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                //清空
                $("#tbo1 tr").remove();
                $.each(result, function (index, data) {
                    $("#tbo1").append("<tr><td><input id='xz' type='checkbox' name='subcheck' /></td><td>" + data.supplierNum + "</td><td>" + data.supplierLeix + "</td><td>" + data.supplierName + "</td><td>" + data.phone + "</td><td>" + data.chuanzhen + "</td><td> " + data.email + "</td><td>" + data.contacts + "</td><td> " + data.address + "</td><td> " + data.contents + "</td><td> " + data.isDel + "</td></tr>")
                });
            }, error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
</script>